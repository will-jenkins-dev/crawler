{
    "name": "crawler",
    "version": "1.0.0",
    "description": "Standalone service to crawl web pages and find assets",
    "main": "index.ts",
    "scripts": {
        "start": "rm -rf dist && tsc && nodemon -r dotenv/config ./dist/crawler/index.js",
        "watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"nodemon -r dotenv/config ./dist/crawler/index.js\"",
        "test": "rm -rf dist && npm run lint && tsc && jest --silent",
        "types": "rm -rf dist && tsc",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "start-production": "rm -rf node_modules && npm install --production && npm install nodemon && rm -rf dist && tsc --project tsconfig.production.json && nodemon -r dotenv/config ./dist/index.js"
    },
    "keywords": [],
    "author": "Will Jenkins",
    "license": "",
    "homepage": "",
    "dependencies": {
        "axios": "0.26.0",
        "express": "4.17.3",
        "jsdom": "19.0.0"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/jest": "27.4.1",
        "@types/jsdom": "16.2.14",
        "@types/node": "^16.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "5.12.1",
        "@typescript-eslint/parser": "5.12.1",
        "dotenv": "10.0.0",
        "eslint": "8.10.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-jest": "26.1.1",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.5.1",
        "nodemon": "2.0.12",
        "prettier": "2.3.2",
        "supertest": "6.1.6",
        "ts-jest": "27.1.3",
        "ts-node": "10.5.0",
        "tsc-watch": "4.5.0",
        "typescript": "4.5.5"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=16.14.0"
    },
    "jest": {
        "rootDir": "dist/crawler",
        "moduleFileExtensions": [
            "js"
        ]
    }
}
