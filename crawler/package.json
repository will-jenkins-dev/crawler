{
    "name": "crawler",
    "version": "1.0.0",
    "description": "Standalone service to crawl web pages and find assets",
    "main": "index.ts",
    "scripts": {
        "start": "rm -rf dist && tsc && nodemon -r dotenv/config ./dist/crawler/index.js",
        "watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"nodemon -r dotenv/config ./dist/crawler/index.js\"",
        "test": "rm -rf dist && npm run lint && tsc && jest --silent",
        "types": "rm -rf dist && tsc",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "start-production": "rm -rf node_modules && npm install --production && npm install nodemon && rm -rf dist && tsc --project tsconfig.production.json && nodemon -r dotenv/config ./dist/index.js"
    },
    "keywords": [],
    "author": "Will Jenkins",
    "license": "",
    "homepage": "",
    "dependencies": {
        "axios": "0.26.0",
        "express": "4.17.3",
        "jsdom": "19.0.0",
        "typescript": "4.5.5"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/node": "^16.7.10",
        "@types/cors": "^2.8.12",
        "@types/jest": "^27.4.1",
        "@types/jsdom": "^16.2.14",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.5.1",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "sqlite3": "npm:@vscode/sqlite3@^5.0.7",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.5.0",
        "tsc-watch": "^4.5.0"
    },
    "engines": {
        "npm": ">=8.0.0",
        "node": ">=14.0.0"
    },
    "jest": {
        "rootDir": "dist",
        "setupFiles": [
            "<rootDir>/tests/setTestEnvVars.js"
        ],
        "moduleFileExtensions": [
            "js"
        ]
    }
}
